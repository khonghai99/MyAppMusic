<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSmallPicture"
            android:layout_width="@dimen/image_small_notify_width_height"
            android:layout_height="@dimen/image_small_notify_width_height"
            android:layout_centerVertical="true"
            android:src="@mipmap/chieu_hom_ay" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/linear_margin_end_small_notify">

        <ImageView
            android:id="@+id/ivSmallPrevious"
            android:layout_width="@dimen/icon_next_previous_width_height"
            android:layout_height="@dimen/icon_next_previous_width_height"
            android:layout_marginTop="@dimen/icon_next_previous_margin_top"
            android:layout_marginEnd="@dimen/icon_next_previous_margin_end"
            android:src="@mipmap/ic_previous" />

        <ImageView
            android:id="@+id/ivSmallPause"
            android:layout_width="@dimen/icon_pause_small_width_height"
            android:layout_height="@dimen/icon_pause_small_width_height"
            android:src="@drawable/ic_button_playing" />

        <ImageView
            android:id="@+id/ivSmallNext"
            android:layout_width="@dimen/icon_next_previous_width_height"
            android:layout_height="@dimen/icon_next_previous_width_height"
            android:layout_marginStart="@dimen/icon_next_previous_margin_end"
            android:layout_marginTop="@dimen/icon_next_previous_margin_top"
            android:src="@mipmap/ic_next" />
    </LinearLayout>
</RelativeLayout>