<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/layoutBottomAllSong"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout

        android:id="@+id/layoutBottomAllSong"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_shadow"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivSongBottomAllSong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/chieu_hom_ay" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivSongBottomAllSong"
            android:layout_toLeftOf="@id/ivPauseBottomAllSong"
            android:layout_toRightOf="@id/ivSongBottomAllSong">

            <TextView
                android:id="@+id/tvTitleSongBottomAllSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/default_name_song"
                android:textColor="@color/textDefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvArtistBottomAllSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleSongBottomAllSong"
                android:layout_alignLeft="@id/tvTitleSongBottomAllSong"
                android:text="@string/default_album_song"
                android:textColor="@color/timeDefault"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivPauseBottomAllSong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_media_pause_light" />
    </RelativeLayout>


</RelativeLayout>