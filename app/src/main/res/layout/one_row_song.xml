<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRelativeOnerow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/number_default"
            android:textSize="20sp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imgPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_playing_song"
            android:text="@string/number_default"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTitleSongOneRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/ivShowPopup"
            android:layout_toRightOf="@id/tvID"
            android:maxLines="1"
            android:text="@string/default_name_song"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvDurationSongOneRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleSongOneRow"
            android:layout_alignStart="@id/tvTitleSongOneRow"
            android:text="@string/default_time_song" />

        <ImageView
            android:id="@+id/ivShowPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_click_show_popup"
            android:scaleType="centerInside" />

    </RelativeLayout>
</RelativeLayout>