<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRelativeOnerow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="27dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/number_default"
            android:textColor="@color/sttDefault"
            android:textSize="15sp" />

        <es.claucookie.miniequalizerlibrary.EqualizerView
            android:id="@+id/equalizer_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivShowPopup"
            android:layout_toRightOf="@id/tvID">

            <TextView
                android:id="@+id/tvTitleSongOneRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:maxLines="1"
                android:text="@string/default_name_song"
                android:textColor="@color/textDefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDurationSongOneRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleSongOneRow"
                android:layout_alignStart="@id/tvTitleSongOneRow"
                android:layout_marginTop="3dp"
                android:text="@string/default_time_song"
                android:textColor="@color/timeDefault"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivShowPopup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_show_menu_top_media"
            android:scaleType="centerInside" />

    </RelativeLayout>
</RelativeLayout>